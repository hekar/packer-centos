{
  "_comment": "Build with `packer build centos.json`",
  "builders": [{
    "type": "qemu",
    "accelerator": "kvm",
    "headless": false,
    "qemuargs": [
      [ "-m", "2048M" ],
      [ "-smp", "cpus=1,maxcpus=4,cores=1" ]
    ],
    "disk_interface": "virtio",
    "disk_size": "{{ user `disk_size` }}",
    "format": "qcow2",
    "net_device": "virtio-net",

    "boot_wait": "5s",
    "boot_command": [
      "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
    ],

    "http_directory": "kickstart",
    "http_port_min": 10082,
    "http_port_max": 10089,

    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "{{ user `iso_checksum_type` }}",
    "iso_urls": [
      "iso/{{ user `iso_name` }}",
      "{{ user `iso_url` }}"
    ],

    "output_directory": "output-{{ user `vm_name` }}-qemu-iso",
    "shutdown_command": "shutdown -P now",
    
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_timeout": "20m",
    "ssh_wait_timeout": "360s",

    "vm_name": "{{ user `vm_name` }}"
  }],
  "post-processors": [
  ],
  "provisioners": [{
    "environment_vars": [
      "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
      "DESKTOP={{user `desktop`}}",
      "UPDATE={{user `update`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/update.sh"
    ],
    "type": "shell",
    "expect_disconnect": "true"
  },{
    "environment_vars": [
      "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
      "DESKTOP={{user `desktop`}}",
      "UPDATE={{user `update`}}",
      "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/sshd.sh",
      "script/motd.sh",
      "custom-script.sh",
      "script/packages.sh",
      "script/cleanup.sh"
    ],
    "type": "shell",
    "pause_before": "10s"
  }],
  "variables": {
    "cleanup_build_tools": "false",
    "disk_size": "65536",
    "iso_checksum": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1708.iso",
    "iso_url": "http://mirrors.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-DVD-1708.iso",
    "kickstart": "ks.cfg",
    "ssh_username": "codeaira",
    "ssh_password": "changeme",
    "update": "false",
    "version": "0.0.99",
    "vm_name": "centos7"
  }
}
