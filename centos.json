{
  "_comment": "Build with `packer build centos.json`",
  "builders": [{
    "boot_command": [
      "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
    ],
    "type": "qemu",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "{{ user `iso_checksum_type` }}",
    "iso_urls": [
      "{{ user `iso_path` }}/{{ user `iso_name` }}",
      "{{ user `iso_url` }}"
    ],
    "output_directory": "output-{{ user `vm_name` }}-qemu-iso",
    "shutdown_command": "{{ user `shutdown_command` }}",
    "ssh_password": "{{ user `ssh_password` }}",
    "ssh_username": "{{ user `ssh_username` }}",
    "format": "qcow2",
    "accelerator": "kvm",
    "ssh_timeout": "20m",
    "vm_name": "{{ user `vm_name` }}",
    "net_device": "virtio-net",
    "disk_interface": "virtio",
    "disk_size": "{{ user `disk_size` }}"
  }],
  "post-processors": [
  ],
  "provisioners": [{
    "environment_vars": [
      "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
      "DESKTOP={{user `desktop`}}",
      "UPDATE={{user `update`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/update.sh"
    ],
    "type": "shell",
    "expect_disconnect": "true"
  },{
    "environment_vars": [
      "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
      "DESKTOP={{user `desktop`}}",
      "UPDATE={{user `update`}}",
      "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
      "SSH_USERNAME={{user `ssh_username`}}",
      "SSH_PASSWORD={{user `ssh_password`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/vagrant.sh",
      "script/desktop.sh",
      "script/motd.sh",
      "custom-script.sh",
      "script/cleanup.sh"
    ],
    "type": "shell",
    "pause_before": "10s"
  }],
  "variables": {
    "cleanup_build_tools": "false",
    "cpus": "1",
    "desktop": "false",
    "disk_size": "65536",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "",
    "http_directory": "kickstart/centos7",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_vagrant_key": "true",
